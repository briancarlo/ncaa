			// legend2.append("text")
			// 	    .attr("y", function(d) { return -2 * radius(d); })
			// 	    .attr("dy", "1.3em")
			// 	    .text(d3.format(".1s"));

			function fadeOut(selection) {
				circle.transition().style("opacity",0).duration(1000);
				// selection.style("opacity",op).transition().style("opacity",0);
			}

			function fadeIn(selection) {
				return selection.style("opacity",0).transition().style("opacity",op);
			}


			function outputUpdate(i) {
				document.querySelector('#year').innerHTML = i;
				fadeOut();
				// circle.style("opacity",0);

				// circle.transition().duration(2000).style("opacity",0);
				// circle.transition().duration(2000).style("opacity",0);
				circle.data(dataset[String(i)])
						// .style("opacity",0)
						.attr("cx", function(d) { return xScale(d[1]); })
						.attr("cy", function(d) { return yScale(d[0]); })
						.attr("r", function(d) { return (5*(Math.log(d[2])/2)+1.5); })
						// .transition()
						// .duration(2000)
						// .each(function() { circle.call(fadeOut).call(fadeIn); })
						.transition().duration(1000).style("opacity",op);
						// circle.transition().duration(2000).style("opacity",0.85);
			}
		</script>
		<label for="fader">Year</label>
		<input id="slider1" type="range" min="2008" max="2015" step="1" value="2015" oninput="outputUpdate(value)">
		<output for="fader" id="year">2015</output>

	</body>
</html>
