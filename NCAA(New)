			d3.select('#chart svg')
  				.append("text")
  				.attr("x", 200)             
  				.attr("y", 100)
  				.attr("text-anchor", "middle")  
  				.text("Sample Charts");

			var year = "2015"
			var padding = 60;
			var w = 550;
			var h = 550;
			var op = 0.8;
			var svg = d3.select("body")
						.append("svg")
						.attr("width", w)
						.attr("height", h)
			var xScale = d3.scale.linear()
								// .domain([30, d3.max(dataset, function(d) { return d[1]; })])
								.domain([30, 100])
                     			.range([padding, w - padding]);
			var yScale = d3.scale.linear()
			                     // .domain([30, d3.max(dataset, function(d) { return d[0]; })])
 								.domain([30, 100])
			                    .range([h - padding, padding]);
      		var xAxis = d3.svg.axis()
      						.scale(xScale)
      						.orient("bottom")
      						.ticks(9);
      		var yAxis = d3.svg.axis()
      						.scale(yScale)
      						.orient("left")
      						.ticks(9);
			var line = svg.append("line")
		 				.attr("x1", padding)
		                .attr("y1", h-padding)
		                .attr("x2", h-padding)
		                .attr("y2", padding)
		                .attr("stroke-width", 0.5)
		                .style("stroke-dasharray", ("5,3"))
		                .attr("stroke", "black");
    		var underdog = svg.append("text")
					    .attr("class", "x label")
					    .attr("text-anchor", "end")
					    .attr("x", w - padding)
					    .attr("y", h - 20)
					    .text("Underdog Score");
			var favorite = svg.append("text")
							.attr("class", "y label")
							.attr("text-anchor", "middle")
							.attr("y", 20)
							.attr("dy", 0)
							.attr("x", -105)
							.attr("transform", "rotate(-90)")
							.text("Favorite Score");
			var tooltip = d3.select("body").append("div")
						    .attr("class", "tooltip")
						    .style("opacity", 1);
			// setup fill color
			var cValue = function(d) { return d[3];},
			    // color = d3.scale.category10();
				color = d3.scale.ordinal()
				.domain(["First Round", 
						"Second Round", 
						"Sweet Sixteen", 
						"Elite Eight", 
						"Final Four",
						"Championship"])
				.range([
						"#85F9FA",
						"#AEDC91",
						"#F3E4C0",
						"#DC8D86",
						"#B582FA",
						"#DC6000"
						])

			var circle = svg.selectAll("circle")
				.data(dataset[year])
				.enter()
				.append("circle")
				.attr("cx", function(d) {
					return xScale(d[1]);
				})
				.attr("cy", function(d) {
					return yScale(d[0]);
				})
				.attr("r", function(d) {
					return (5*(Math.log(d[2])/2)+1.5);
				})
      			.style("fill", function(d) { return color(cValue(d));})
		        .attr("stroke-width", 0.5)
		        .attr("stroke", "black")
                .attr("data-species", function(d) {
                	return d[3];
                })
                .style("opacity", 0)
      			.on("mouseover", function(d) {
          			tooltip.transition()
               			.duration(200)
               			.style("opacity", op);
          			tooltip.html(d[4]+": "+d[0]+"<br/> "+d[5]+": "+d[1])
               			.style("left", (d3.event.pageX + 5) + "px")
               			.style("top", (d3.event.pageY - 28) + "px");
      			})
      			.on("mouseout", function(d) {
          			tooltip.transition()
               		.duration(600)
               		.style("opacity", 0); });
				// .sort(order);

			circle.transition()
			    .duration(1000)
			    .style('opacity', op);


      		svg.append("g")
      			.attr("class","axis")
      			.attr("transform","translate(0," + (h - padding) + ")")
    			.call(xAxis);
     		svg.append("g")
      			.attr("class","axis")
      			.attr("transform", "translate(" + padding + ",0)")
    			.call(yAxis);

			var legend = svg.append("g")
				.attr("class", "legend")
				.attr("width", 50)
				.attr("height", 50)
				.selectAll("g")
				.data(color.domain())
				.enter().append("g")
				.attr("transform", function(d, i) { return "translate(0," + i * 20 + ")"; });
			legend.append("rect")
				.attr("width", 18)
				.attr("height", 18)
				.attr("x", 390)
				.attr("y", 300+60)
				.style("fill", color)
                .style("opacity", 0.7)
				.on("click", function (d) {
					circle.filter(function () {
						return this.dataset.species === d;
					})
					.transition().duration(750)
					.style("opacity", function () {
						console.log(this.style.opacity);
						return (parseFloat(this.style.opacity)) ? 0 : op;
					});
				});
		      
			legend.append("text")
   				  .attr("x", 410)
				  .attr("y", 309+60)
			      .attr("dy", ".35em")
			      .text(function(d) { return d; });
			
